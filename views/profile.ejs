<!-- Breadcrumb Section Begin -->
<section class="breadcrumb-section set-bg" data-setbg="/images/breadcrumb.jpg">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-center">
                <div class="breadcrumb__text">
                    <h2>Checkout</h2>
                    <div class="breadcrumb__option">
                        <a href="./index">Home</a>
                        <span>Profile</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Breadcrumb Section End -->

<!-- Checkout Section Begin -->
<section class="checkout spad">
    <div class="container">
        <div class="checkout__form">
            <h4>Profile Information</h4>
            <form>
                <div class="row">
                    <div class="col-lg-12 col-md-12">
                        <div class="row">
                            <div class="col-lg-6">
                                <div class="checkout__input">
                                    <p>Fist Name</p>
                                    <input readonly type="text" name="firstname" value="<%= firstname %>">
                                </div>
                            </div>
                            <div class="col-lg-6">
                                <div class="checkout__input">
                                    <p>Last Name</p>
                                    <input readonly type="text" name="lastname" value="<%= lastname %>">
                                </div>
                            </div>
                        </div>
                        <% if(address !=undefined || address!=null) { %>
                            <div class="checkout__input">
                                <p>Country</p>
                                <input readonly type="text" name="country" value="<%= address.country %>">
                            </div>
                            <div class="checkout__input">
                                <p>Address</p>
                                <input readonly value="<%= address.street %>" type="text" placeholder="Street Address"
                                    class="checkout__input__add" name="street">
                                <input readonly value="<%= address.apartment %>" type="text"
                                    placeholder="Apartment, suite, unite ect (optinal)" name="apartment">
                            </div>
                            <div class="checkout__input">
                                <p>Town/City</p>
                                <input readonly value="<%= address.city %>" type="text" name="city">
                            </div>
                            <div class="checkout__input">
                                <p>Country/State</p>
                                <input readonly value="<%= address.state %>" type="text" name="state">
                            </div>
                            <div class="checkout__input">
                                <p>Postcode / ZIP</p>
                                <input readonly value="<%= address.zipcode %>" type="text" name="zipcode">
                            </div>
                            <% } %>
                                <% if(user.phone !=undefined || user.phone!=null) { %>
                                    <div class="row">
                                        <div class="col-lg-6">
                                            <div class="checkout__input">
                                                <p>Phone</p>
                                                <input readonly value="<%= user.phone %>" type="text" name="phone">
                                            </div>
                                        </div>
                                        <% } %>
                                            <div class="col-lg-6">
                                                <div class="checkout__input">
                                                    <p>Email</p>
                                                    <input readonly type="text" name="email" value="<%= email %>">
                                                </div>
                                            </div>
                                            <div class="col-lg-6">
                                                <a href="/logout" class="primary-btn">Logout</a>
                                            </div>

                                    </div>

                    </div>
                </div>
            </form>
        </div>
    </div>
</section>

<!-- Order Section Begin -->
<% if(orders!=undefined || orders!=null){ %>
<section class="checkout spad">
    <div class="container">

        <!-- TABLE CONSTRUCTION -->
        <div class="row">
            <div class="col-lg-3">

            </div>
            <div class="col-lg-6">
                <h3 class="text-center">Order Details</h1>
                    <table class="table table-bordered mt-4 text-center table-striped">
                        <thead>
                            <th scope="row">Order Id</th>
                            <th scope="row">Date</th>
                        </thead>
                        <!-- LOOP TO FETCH DATA FROM DATABASE -->
                       
                          <%   for(var i=0;i<orders.length ; i++) { %>
                            <tr>
                                <!-- FETCHING DATA FROM EACH
                            ROW OF EVERY COLUMN -->
                                <td>
                                  <a href="/orderdetails/<%=orders[i]._id%>">  <%= orders[i]._id %> </a>
                                </td>
                                <td>
                                    <%= orders[i].date.toString().substring(0,21) %>
                                </td>
                            </tr>
                            <% } %>
                    </table>
            </div>
            <div class="col-lg-3">

            </div>
        </div>

    </div>
</section>
<% } %>
<!-- Order Section End -->