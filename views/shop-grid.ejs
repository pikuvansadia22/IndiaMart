
    <!-- Breadcrumb Section Begin -->
    <section class="breadcrumb-section set-bg" data-setbg="/images/breadcrumb.jpg">
        <div class="container">
            <div class="row">
                <div class="col-lg-12 text-center">
                    <div class="breadcrumb__text">
                        <h2>India Mart</h2>
                        <div class="breadcrumb__option">
                            <a href="/index">Home</a>
                            <span>Shop</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- Breadcrumb Section End -->

    <!-- Product Section Begin -->
    <section class="product spad">
        <div class="container">
            <div class="row">
                
                <div class="col-lg-12 col-md-12">
                   
                    <div class="row">
                        <% for(var i=0;i<products.length;i++) { %>
                        <div class="col-lg-4 col-md-6 col-sm-6">
                            <div class="product__item">
                                <div class="product__item__pic set-bg" data-setbg="data:image/<%=products[i].image.contentType%>;base64,<%=products[i].image.data.toString('base64')%>">
                                    <ul class="product__item__pic__hover">
                                       
                                        <li><a href="/addtocart/<%= products[i]._id %>"><i class="fa fa-shopping-cart"></i></a></li>
                                    </ul>
                                </div>
                                <div class="product__item__text">
                                    <h6><a href="/shop-details/<%= products[i]._id %>"><%= products[i].name %></a></h6>
                                    <h5>$<%= products[i].price %></h5>
                                </div>
                            </div>
                        </div>
                        <% } %>
                    </div>
                    
                </div>
            </div>
        </div>
    </section>
    <!-- Product Section End -->
