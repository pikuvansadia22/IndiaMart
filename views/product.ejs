<!-- Breadcrumb Section Begin -->
<section class="breadcrumb-section set-bg" data-setbg="/images/breadcrumb.jpg">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-center">
                <div class="breadcrumb__text">
                    <h2>Product</h2>
                    <div class="breadcrumb__option">
                        <a href="/product">Product</a>
                        <span>Product List</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Breadcrumb Section End -->

<!-- Checkout Section Begin -->
<section class="checkout spad">
    <div class="container">
        <div class="checkout__form">

            <% if(products===undefined || products==null){ %>
                <form action="/saveproducts" method="post" enctype="multipart/form-data">
                    <% } else { %>
                        <form action="/updateproduct" method="post" enctype="multipart/form-data">
                            <%}%>

                                <div class="row">
                                    <div class="col-lg-3 col-md-12">
                                    </div>
                                    <div class="col-lg-6 col-md-12">
                                        <h4>Product Info</h4>
                                        <div class="row">
                                            <div class="col-lg-12">
                                                <div class="checkout__input">
                                                    <p>Availability<span>*</span></p>
                                                    <% if(products!=undefined && products!=null){ %>
                                                        <input type="hidden" name="id" required
                                                            value="<%=products._id%>">
                                                        <input type="text" name="availability"
                                                            value="<%=products.availability%>" required>
                                                        <% } else{ %>
                                                            <input type="text" name="availability" required>
                                                            <% } %>

                                                </div>

                                            </div>
                                        </div>

                                        <div class="checkout__input">
                                            <p>Description<span>*</span></p>
                                            <% if(products!=undefined && products!=null){ %>
                                                <input type="text" name="description" required
                                                    value="<%=products.description%>">
                                                <% } else{ %>
                                                    <input type="text" name="description" required>
                                                    <% } %>
                                        </div>

                                        <div class="checkout__input">
                                            <p>Information<span>*</span></p>
                                            <% if(products!=undefined && products!=null){ %>
                                                <input type="text" name="information" required
                                                    value="<%=products.information%>">
                                                <% } else{ %>
                                                    <input type="text" name="information" required>
                                                    <% } %>
                                        </div>

                                        <div class="checkout__input">
                                            <p>Name<span>*</span></p>
                                            <% if(products!=undefined && products!=null){ %>
                                                <input type="text" name="name" required value="<%=products.name%>">
                                                <% } else{ %>
                                                    <input type="text" name="name" required>
                                                    <% } %>
                                        </div>

                                        <div class="checkout__input">
                                            <p>No of Reviews<span>*</span></p>
                                            <% if(products!=undefined && products!=null){ %>
                                                <input type="text" name="no_of_reviews" required
                                                    value="<%=products.no_of_reviews%>">
                                                <% } else{ %>
                                                    <input type="text" name="no_of_reviews" required>
                                                    <% } %>
                                        </div>

                                        <div class="checkout__input">
                                            <p>Price<span>*</span></p>
                                            <% if(products!=undefined && products!=null){ %>
                                                <input type="text" name="price" required value="<%=products.price%>">
                                                <% } else{ %>
                                                    <input type="text" name="price" required>
                                                    <% } %>
                                        </div>

                                        <div class="checkout__input">
                                            <p>Reviews<span>*</span></p>
                                            <% if(products!=undefined && products!=null){ %>
                                                <input type="text" name="reviews" required
                                                    value="<%=products.reviews%>">
                                                <% } else{ %>
                                                    <input type="text" name="reviews" required>
                                                    <% } %>
                                        </div>

                                        <div class="checkout__input">
                                            <p>Shipping Days<span>*</span></p>
                                            <% if(products!=undefined && products!=null){ %>
                                                <input type="text" name="shipping_days" required
                                                    value="<%=products.shipping_days%>">
                                                <% } else{ %>
                                                    <input type="text" name="shipping_days" required>
                                                    <% } %>
                                        </div>

                                        <div class="checkout__input">
                                            <p>Weight<span>*</span></p>
                                            <% if(products!=undefined && products!=null){ %>
                                                <input type="text" name="weight" required value="<%=products.weight%>">
                                                <% } else{ %>
                                                    <input type="text" name="weight" required>
                                                    <% } %>
                                        </div>

                                        <div class="checkout__input">
                                            <p>Image<span>*</span></p>
                                            <% if(products!=undefined && products!=null){ %>
                                                <input type="file" id="image" name="image" />
                                                <% } else{ %>
                                                    <input type="file" id="image" name="image" value="" required />
                                                    <% } %>
                                        </div>


                                        <div class="row">
                                            <div class="col-lg-12">
                                                <select name="category" class="checkout__input">
                                                   <% if(products===undefined || products==null){ %>
                                                    <option value="select category" selected>Select Category</option>
                                                    <% } %>
                                                    <%for(var i=0;i<categories.length;i++){ %>
                                                        <% if((products!=undefined && products!=null) && (products.category_id==categories[i]._id)) { %>
                                                            <option value="<%=categories[i]._id%>" selected><span>
                                                                    <%=categories[i].name%>
                                                                </span></option>
                                                            <% } else { %>
                                                                <option value="<%=categories[i]._id%>"><span>
                                                                        <%=categories[i].name%>
                                                                    </span></option>
                                                                <%}%>
                                                                    <%}%>
                                                </select>
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-lg-3"></div>
                                            <div class="col-lg-6">
                                                <% if(products!=undefined && products!=null){ %>
                                                    <button type="submit" class="site-btn">Update Product</button>
                                                    <% } else { %>
                                                        <button type="submit" class="site-btn">Add Product</button>
                                                        <%}%>
                                            </div>
                                            <div class="col-lg-3"></div>
                                        </div>
                                    </div>
                        </form>
        </div>
    </div>
</section>
<!-- Checkout Section End -->