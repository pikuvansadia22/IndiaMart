<!-- Breadcrumb Section Begin -->
<section class="breadcrumb-section set-bg" data-setbg="/images/breadcrumb.jpg">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-center">
                <div class="breadcrumb__text">
                    <h2>Product</h2>
                    <div class="breadcrumb__option">
                        <a href="/product">Product</a>
                        <span>Product List</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Breadcrumb Section End -->

<!-- Checkout Section Begin -->
<section class="checkout spad">
    <div class="container">
        <div class="checkout__form">

            <form action="saveproducts" method="post" enctype="multipart/form-data">
                <div class="row">
                    <div class="col-lg-3 col-md-12">
                    </div>
                    <div class="col-lg-6 col-md-12">
                        <h4>Product Info</h4>
                        <div class="row">
                            <div class="col-lg-12">
                                <div class="checkout__input">
                                    <p>Availability<span>*</span></p>
                                    <input type="text" name="availability" required>
                                </div>

                            </div>
                        </div>

                        <div class="checkout__input">
                            <p>Description<span>*</span></p>
                            <input type="text" name="description" required>
                        </div>

                        <div class="checkout__input">
                            <p>Information<span>*</span></p>
                            <input type="text" name="information" required>
                        </div>

                        <div class="checkout__input">
                            <p>Name<span>*</span></p>
                            <input type="text" name="name" required>
                        </div>

                        <div class="checkout__input">
                            <p>No of Reviews<span>*</span></p>
                            <input type="text" name="no_of_reviews" required>
                        </div>

                        <div class="checkout__input">
                            <p>Price<span>*</span></p>
                            <input type="text" name="price" required>
                        </div>

                        <div class="checkout__input">
                            <p>Reviews<span>*</span></p>
                            <input type="text" name="reviews" required>
                        </div>

                        <div class="checkout__input">
                            <p>Shipping Days<span>*</span></p>
                            <input type="text" name="shipping_days" required>
                        </div>

                        <div class="checkout__input">
                            <p>Weight<span>*</span></p>
                            <input type="text" name="weight" required>
                        </div>

                        <div class="checkout__input">
                            <p>Image<span>*</span></p>
                            <input type="file" id="image" name="image" value="" required />
                        </div>


                        <div class="row">
                            <div class="col-lg-12">
                                <select name="category" class="checkout__input">
                                    <option value="select category" selected>Select Category</option>
                                    <%for(var i=0;i<categories.length;i++){ %>
                                        <option value="<%=categories[i]._id%>"><span>
                                                <%=categories[i].name%>
                                            </span></option>
                                        <%}%>
                                </select>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-lg-3"></div>
                            <div class="col-lg-6">
                                <button type="submit" class="site-btn">Add Product</button>
                            </div>
                            <div class="col-lg-3"></div>
                        </div>
                    </div>
            </form>
        </div>
    </div>
</section>
<!-- Checkout Section End -->

<style>
    table {
        margin: 0 auto;
        font-size: large;
        border: 1px solid black;
    }

    h1 {
        text-align: center;
        color: #006600;
        font-size: xx-large;
        font-family: 'Gill Sans', 'Gill Sans MT',
            ' Calibri', 'Trebuchet MS', 'sans-serif';
    }

    td {
        background-color: #E4F5D4;
        border: 1px solid black;
    }

    th,
    td {
        font-weight: bold;
        border: 1px solid black;
        padding: 10px;
        text-align: center;
    }
</style>

<!-- Category Display From MongoDb Section Begin -->
<section>
    <div class="container text-center">

        <h1>Category Fields From Database</h1>
        <!-- TABLE CONSTRUCTION -->
        <table>
            <tr>
                <th>Name</th>
                <th>Price</th>
                <th>Infomation</th>
                <th>Description</th>
                <th>Availability</th>
                <th>Total Reviews</th>
                <th>Shipping Days</th>
                <th>Weight</th>
                <th>Reviews(Star)</th>
                <th>Image </th>
            </tr>
            <!-- LOOP TO FETCH DATA FROM DATABASE -->
            <% for(var i=0;i<products.length;i++) { %>
                <tr>
                    <!-- FETCHING DATA FROM EACH
                    ROW OF EVERY COLUMN -->
                    <td>
                        <%= products[i].name %>
                    </td>
                    <td>$<%= products[i].price %>
                    </td>
                    <td><%= products[i].information %></td>
                <td><%= products[i].description %></td>
                    <td>$<%= products[i].availability %>
                    </td>
                    <td>
                        <%= products[i].no_of_reviews %>
                    </td>
                    <td>
                        <%= products[i].shipping_days %>
                    </td>
                    <td>$<%= products[i].weight %>
                    </td>
                    <td>
                        <%= products[i].reviews %>
                    </td>
                    <td>
                        <% if (products[i].image && products[i].image.data) { %>
                            <img height="150" width="150"
                                src="data:image/<%=products[i].image.contentType%>;base64,<%=products[i].image.data.toString('base64')%>" />
                            <% } %>
                    </td>
                </tr>
                <% } %>
        </table>
    </div>
</section>
<!-- Category Display From MongoDb Section End -->