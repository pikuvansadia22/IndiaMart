<!-- Breadcrumb Section Begin -->
<section class="breadcrumb-section set-bg" data-setbg="/images/breadcrumb.jpg">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-center">
                <div class="breadcrumb__text">
                    <h2>Category</h2>
                    <div class="breadcrumb__option">
                        <a href="/category">Category</a>
                        <span>Category List</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Breadcrumb Section End -->

<!-- Category Section Begin -->
<section class="checkout spad">
    <div class="container">
        <div class="checkout__form">
            <% if(categories===undefined || categories==null){ %>
                <form action="/savecategory" method="post" enctype="multipart/form-data">
                    <% } else { %>
                        <form action="/updatecategory" method="post" enctype="multipart/form-data">
                            <%}%>
                                <div class="row">
                                    <div class="col-lg-3 col-md-12">
                                    </div>
                                    <div class="col-lg-6 col-md-12">
                                        <h4>Category Info</h4>
                                        <div class="row">
                                            <div class="col-lg-12">
                                                <div class="checkout__input">
                                                    <p>Name<span>*</span></p>
                                                    <% if(categories!=undefined && categories!=null){ %>
                                                        <input type="hidden" name="id" required
                                                            value="<%=categories._id%>">
                                                        <input type="text" name="name" required
                                                            value="<%=categories.name%>">
                                                        <% } else{ %>
                                                            <input type="text" name="name" required>
                                                            <% } %>
                                                </div>

                                            </div>
                                        </div>
                                        <div class="checkout__input">
                                            <p>Image<span>*</span></p>
                                            <% if(categories!=undefined && categories!=null){ %>
                                                <input type="file" id="image" name="image" />
                                                <% } else{ %>
                                                    <input type="file" id="image" name="image" value="" required />
                                                    <% } %>
                                        </div>

                                        <div class="row">
                                            <div class="col-lg-3"></div>
                                            <div class="col-lg-6">
                                                <% if(categories!=undefined && categories!=null){ %>
                                                    <button type="submit" class="site-btn">Update Category</button>
                                                    <% } else { %>
                                                        <button type="submit" class="site-btn">Add Category</button>
                                                        <%}%>
                                            </div>
                                            <div class="col-lg-3"></div>
                                        </div>
                                    </div>
                        </form>
        </div>
    </div>
</section>
<!-- Category Section End -->