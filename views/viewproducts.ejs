<!-- Breadcrumb Section Begin -->
<section class="breadcrumb-section set-bg" data-setbg="/images/breadcrumb.jpg">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-center">
                <div class="breadcrumb__text">
                    <h2>Product</h2>
                    <div class="breadcrumb__option">
                        <a href="/product">Product</a>
                        <span>Product List</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Breadcrumb Section End -->

<!-- Checkout Section Begin -->
<section class="checkout spad">

    <div class="col-lg-12">
        <h3 class="text-center">Products From Database</h1>
            <table class="table table-bordered mt-4 text-center table-striped">
                <thead>
                    <th scope="row">Name</th>
                    <th scope="row">Price</th>
                    <th scope="row">Infomation</th>
                    <th scope="row">Description</th>
                    <th scope="row">Availability</th>
                    <th scope="row">Total Reviews</th>
                    <th scope="row">Shipping Days</th>
                    <th scope="row">Weight</th>
                    <th scope="row">Reviews(Star)</th>
                    <th scope="row">Image </th>
                    <th scope="row">Edit</th>
                    <th scope="row">Delete</th>
                </thead>
                <!-- LOOP TO FETCH DATA FROM DATABASE -->
                <% for(var i=0;i<products.length;i++) { %>
                    <tr>
                        <!-- FETCHING DATA FROM EACH
                    ROW OF EVERY COLUMN -->
                        <td>
                            <%= products[i].name %>
                        </td>
                        <td>$<%= products[i].price %>
                        </td>
                        <td>
                            <%= products[i].information %>
                        </td>
                        <td>
                            <%= products[i].description %>
                        </td>
                        <td><%= products[i].availability %>
                        </td>
                        <td>
                            <%= products[i].no_of_reviews %>
                        </td>
                        <td>
                            <%= products[i].shipping_days %>
                        </td>
                        <td><%= products[i].weight %>
                        </td>
                        <td>
                            <%= products[i].reviews %>
                        </td>
                        <td>
                            <% if (products[i].image && products[i].image.data) { %>
                                <img height="150" width="150"
                                    src="data:image/<%=products[i].image.contentType%>;base64,<%=products[i].image.data.toString('base64')%>" />
                                <% } %>
                        </td>
                        <td>
                            <a href="/product/<%=products[i]._id%>">Edit Details</a>
                        </td>
                        <td>
                            <a href="/deleteproduct/<%=products[i]._id%>">Delete Details</a>
                        </td>
                    </tr>
                    <% } %>
            </table>

</section>
<!-- Checkout Section End -->